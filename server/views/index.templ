package views

import (
    "fmt"
	"github.com/goeflo/accResults/internal/database"
)

templ MakeIndexPage(races []database.Race) {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>date</th>
                    <th>session</th>
                    <th>track</th>
                    <th>server</th>
                </tr>
            </thead>
            <tbody>
                for _, race := range races {
                    <tr>
                        <td>
                            <a hx-target="#content" hx-post={fmt.Sprintf("/details/%d", race.ID)} class="contrast">
                            { fmt.Sprintf("%d", race.ID) }</a>
                        </td>
                        <td>{ race.CreatedAt.Format("2006-01-02") }</td>
                        <td>{ race.SessionType }</td>
                        <td>{ race.Track }</td>
                        <td>{ race.ServerName }</td>
                    </tr>
                }
            </tbody>
        </table>
}

templ MakeIndex(races []database.Race) {
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <link rel="stylesheet" href="/static/pico.min.css" />
        <link rel="stylesheet" href="/static/custom.css" />
        <script src="/static/htmx.min.js" />
        <meta name="htmx-config" content='{code:".*", swap:true},'  />
    </head>

    <body>
        @MakeHeader()
        <main class="container">
            <div id="content">
                @MakeIndexPage(races)
            </div>
        </main>
        @MakeFooter()
    </body>
    </html>
}

